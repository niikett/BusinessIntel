# Instagram Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:niket@localhost:5432/businessintel

# For production with connection pooling:
# DATABASE_URL=postgresql://user:password@host:5432/dbname?pool_size=20&max_overflow=10

# FastAPI Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Instagram Credentials (Optional - for authenticated scraping)
# Note: Current implementation uses public data only
# INSTAGRAM_USERNAME=your_username
# INSTAGRAM_PASSWORD=your_password

# Rate Limiting Configuration
REQUESTS_PER_HOUR=50
DELAY_BETWEEN_REQUESTS=10
MAX_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=crawler.log

# Scheduler Settings
SCHEDULER_ENABLED=True
DAILY_CRAWL_TIME=09:00
WEEKLY_REPORT_DAY=monday
WEEKLY_REPORT_TIME=08:00

# Lead Tracking
MIN_OPPORTUNITY_SCORE=5.0
AUTO_EXPORT_REPORTS=True

# Cache Settings (for production, use Redis)
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=86400

# Email Settings (for automated outreach - future feature)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=your_email@gmail.com

# Google Maps API (for location-based business discovery - Phase 2)
# GOOGLE_MAPS_API_KEY=your_api_key_here

# CORS Settings (specify frontend domains in production)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# API Keys
# ANTHROPIC_API_KEY=your_api_key_here

# Sentry (Error Tracking - Optional)
# SENTRY_DSN=your_sentry_dsn_here

# Environment
ENVIRONMENT=development
